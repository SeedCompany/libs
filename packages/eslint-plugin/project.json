{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "options": {
        "commitMessageFormat": "release(${projectName}): ${version}",
        "postTargets": ["eslint-plugin:publish-npm", "eslint-plugin:publish-github"]
      }
    },
    "publish-npm": {
      "options": {
        "distFolderPath": "packages/eslint-plugin"
      }
    },
    "publish-github": {}
  }
}
