{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "seedco",
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "typecheck",
          "lint",
          "lint:check",
          "test"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional"
      },
      "dependsOn": [
        "build"
      ]
    },
    "publish-npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "noBuild": true
      }
    },
    "publish-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "draft": true,
        "generateNotes": true
      }
    }
  }
}
